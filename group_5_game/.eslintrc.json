{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "requireConfigFile": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/core-web-vitals"
  ],
  "plugins": [
    "react",
    "@next/next"
  ],
  "rules": {
    "semi": ["warn", "always"],  // Treat missing semicolons as warnings, not errors
    "quotes": ["warn", "single"],  // Allow single quotes for strings
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^React$" }],  // Allow unused variables like React
    "no-undef": "off",  // Turn off the rule for undefined variables (like `describe`, `it`, and `expect`)
    "react/jsx-curly-brace-presence": ["warn", { "props": "never", "children": "never" }],
    "react/no-unescaped-entities": "off",  // Disable unescaped entities rule
    "no-console": "off"  // Allow console statements
  }
}
